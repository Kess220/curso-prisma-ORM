// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id    Int    @id @default(autoincrement())
  name  String
  class String
  job   Job?   @relation(fields: [jobId], references: [id])
  jobId Int?

  @@map("students")
}

model Job {
  id      Int       @id @default(autoincrement())
  title   String
  salary  Int
  Student Student[]

  @@map("jobs")
}
